<?xml version="1.0" encoding="UTF-8"?>
<project name="wave" default="clean-build" basedir=".">    
    <property name="project.release.version" value="0.16.0"/>
    <property name="project.release.date" value="26 Sep 2017"/>
    <property name="project.release.production" value="true"/>
    <property environment="env"/>   
    <fail unless="env.CATALINA_HOME" message="Environment variable CATALINA_HOME must be set in order to include Tomcat libraries in classpath"/>
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="dist.dir" value="dist"/>
    <property name="lib.dir" value="lib"/>
    <property name="config.dir" value="config"/>
    <property name="tomcat.lib.dir" value="${env.CATALINA_HOME}/lib"/>
    <property name="doc.dir" value="doc"/>
    <property name="dist.dir" value="dist"/>
    <property name="dist.war" value="${dist.dir}/${ant.project.name}.war"/>
    <scriptdef language="javascript" name="upper">
        <attribute name="string"/> 
        <attribute name="to"/>
        project.setProperty( attributes.get( "to" ),
        attributes.get( "string" ).toUpperCase() );
    </scriptdef>    
    <upper string="${ant.project.name}" to="project.acronym" />
    <path id="project.class.path">       
        <pathelement path="${java.class.path}"/>
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset> 
        <fileset dir="${tomcat.lib.dir}">
            <include name="*.jar"/>
        </fileset>       
    </path>        
    <target name="war" depends="compile">
        <mkdir dir="${dist.dir}"/>     
        <copy todir="${build.dir}/web">
            <fileset dir="web"/>
        </copy>  
        <copy file="web/WEB-INF/web.xml" toFile="${build.dir}/web/WEB-INF/web.xml" overwrite="true" force="true">
            <filterset>
                <filter token="VERSION" value="${project.release.version}"/>
                <filter token="RELEASE_DATE" value="${project.release.date}"/>
                <filter token="PRODUCTION_RELEASE" value="${project.release.production}"/>
            </filterset>
        </copy>
        <concat destfile="${build.dir}/web/resources/css/combined.min.css" encoding="UTF-8" outputencoding="UTF-8" fixlastline="true">
            <fileset dir="web/resources/css">
                <exclude name="combined.min.css"/>
                <include name="**/*.css"/>
            </fileset>
        </concat>
        <concat destfile="${build.dir}/web/resources/js/combined.js" encoding="UTF-8" outputencoding="UTF-8" fixlastline="true">
            <fileset dir="web/resources/js/src">
                <exclude name="combined.js"/>
                <exclude name="combined.min.js"/>
                <include name="**/*.js"/>
            </fileset>
        </concat>
        <java jar="build-lib/yuicompressor-2.4.8.jar" fork="true">
            <arg value="-o"/>
            <arg value="${build.dir}/web/resources/css/combined.min.css"/>
            <arg value="${build.dir}/web/resources/css/combined.min.css"/>
        </java>       
        <java jar="build-lib/closure-compiler-v20170910.jar" fork="true">
            <arg value="--js_output_file=${build.dir}/web/resources/js/combined.min.js"/>
            <arg value="${build.dir}/web/resources/js/combined.js"/>
        </java>          
        <war destfile="${dist.war}" basedir="${build.dir}/web" webxml="${build.dir}/web/WEB-INF/web.xml">
            <lib dir="${lib.dir}"/>
            <classes dir="${classes.dir}"/>
            <classes dir="${config.dir}"/>
        </war>
    </target>
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>    
    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="false" source="1.8" debug="true" encoding="UTF-8">
            <classpath refid="project.class.path"/>
        </javac>
        <copy todir="${classes.dir}">
            <fileset dir="${src.dir}" excludes="**/*.java"/>
        </copy>        
    </target>    
    <target name="doc">
        <javadoc sourcepath="${src.dir}" destdir="${dist.dir}/javadoc" overview="${src.dir}/overview.html">
            <classpath refid="project.class.path"/>
            <header>${project.acronym} Version ${project.release.version}</header>
            <doctitle>${project.acronym} Overview</doctitle>
            <link href="http://docs.oracle.com/javase/8/docs/api/"/>
        </javadoc>
    </target>    
    <target name="clean-build" depends="clean,compile"/>
</project>
